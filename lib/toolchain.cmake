#Try to include a vcpkg toolchain file if none was defined and VCPKG_ROOT is defined
if (DEFINED ENV{VCPKG_ROOT} AND NOT DEFINED CMAKE_TOOLCHAIN_FILE)
	set(CMAKE_TOOLCHAIN_FILE "$ENV{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake" CACHE STRING "" FORCE)
endif()
if (NOT DEFINED VI_CXX)
    set(VI_CXX 20 CACHE STRING "C++ standard number (14, 17, 20, 23)")
    if (${VI_CXX} LESS 14)
        message(FATAL_ERROR "C++${VI_CXX} standard is out of support")
    endif()
    if ("${PROJECT_NAME}" STREQUAL "")
        message(STATUS "C++${VI_CXX} is set by mavi")
    else()
        message(STATUS "C++${VI_CXX} is set by ${PROJECT_NAME}")
    endif()
else()
    if ("${PROJECT_NAME}" STREQUAL "")
        message(STATUS "C++${VI_CXX} is used for mavi")
    else()
        message(STATUS "C++${VI_CXX} is used for ${PROJECT_NAME}")
    endif()
endif()
add_compile_definitions(VI_CXX=${VI_CXX})