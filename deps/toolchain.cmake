if (NOT DEFINED CMAKE_TOOLCHAIN_FILE AND WIN32)
    find_program(VCPKG_PROGRAM vcpkg)
    get_filename_component(VCPKG_PATH "${VCPKG_PROGRAM}" DIRECTORY)
    if (VCPKG_PROGRAM AND VCPKG_PATH)
        set(CMAKE_TOOLCHAIN_FILE "${VCPKG_PATH}/scripts/buildsystems/vcpkg.cmake" CACHE STRING "" FORCE)
    endif()
endif()
if (NOT DEFINED VI_CXX)
    set(VI_CXX 20 CACHE STRING "C++ standard number (17, 20, 23)")
endif()
if (${VI_CXX} LESS 17)
    message(FATAL_ERROR "C++${VI_CXX} standard is not supported")
endif()
if ("${PROJECT_NAME}" STREQUAL "")
    message(STATUS "C++${VI_CXX} is used for vitex")
else()
    message(STATUS "C++${VI_CXX} is used for ${PROJECT_NAME}")
endif()
add_compile_definitions(VI_CXX=${VI_CXX})